// tsconfig.esm.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": ".",
    "outDir": "dist/esm",
    "declaration": false, 
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src", "bin"],
  "exclude": ["dist", "node_modules"]
}
