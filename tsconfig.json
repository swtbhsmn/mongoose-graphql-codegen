// FILE: tsconfig.json
{
  "compilerOptions": {
    /* Build Options */
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",               // Output compiled JS to the 'dist' folder
    "rootDir": "./src",               // Source files are in the 'src' folder
    "declaration": true,              // Generate .d.ts type definition files
    "sourceMap": true,                // Generate source maps for debugging

    /* Interoperability */
    "moduleResolution": "node",       // How modules are discovered
    "esModuleInterop": true,          // Enables 'import x from y' for CommonJS modules
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,                   // Enable all strict type-checking options
    "skipLibCheck": true              // Skip type checking of declaration files
  },
  "include": ["src/**/*"],            // Compile all files within the 'src' directory
  "exclude": ["node_modules", "dist"] // Ignore these directories
}